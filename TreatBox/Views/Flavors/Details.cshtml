@{
  Layout = "_Layout";
}

@model TreatBox.Models.Flavor;

<h2>Flavor Details</h2>
<hr />
<h3>@Html.DisplayName("flavor name"): @Html.DisplayFor(model => model.FlavorName)</h3>

@if(@Model.Treats.Count == 0)
{
  <p>No treats contain this flavor yet</p>
}
else
{
  <h4>Treats containing this flavor</h4>
  <ul>
  @foreach(var join in Model.Treats)
  {
    <li>@join.Treat.TreatName</li>
  }
  </ul>
}

<h3>@Html.ActionLink("Back to all flavor", "Index")</h3>
<h3>@Html.ActionLink("Edit Flavors", "Edit", new { id = Model.FlavorId })</h3>
<h3>@Html.ActionLink("Delete Flavor", "Delete", new { id = Model.FlavorId })</h3>
