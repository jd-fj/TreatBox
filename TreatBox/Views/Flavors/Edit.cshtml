@{
  Layout = "_Layout";
}

@model TreatBox.Models.Flavor

<h2>Edit this flavor:</h2>

<h4>@Html.DisplayFor(model => model.FlavorName)</h4>

@using (Html.BeginForm())
{
    @Html.HiddenFor(model => model.FlavorId)

    @Html.Label("Flavor name:")
    @Html.EditorFor(model => model.FlavorName)

    <input type="submit" value="Save" />
}
<h3>@Html.ActionLink("Back to all flavors", "Index")</h3>